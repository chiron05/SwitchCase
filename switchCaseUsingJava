import java.util.*;

public class switch_case {

	public static void main(String[] args) {
		System.out.println("Enter 1 for addition");
		System.out.println("Enter 2 for subtraction");
		System.out.println("Enter 3 for multiplication");
		System.out.println("Enter 4 for division");
		System.out.print("Please Enter your number: ");
		Scanner sc=new Scanner(System.in);
		int num=sc.nextInt();
		switch(num)
		{
		
		case 1:
		{
			System.out.println("you have choosen addition of two numbers");
			System.out.print("Enter 1st number: ");
			int a=sc.nextInt();
			System.out.print("Enter 2nd number: ");
			int b=sc.nextInt();
			int c=a+b;
			System.out.println("Sum of 2 numbers are "+c);
			break;
			
		}
		case 2:
		{
			System.out.println("you have choosen subtraction of two numbers");
			System.out.print("Enter 1st number: ");
			int a=sc.nextInt();
			System.out.print("Enter 2nd number: ");
			int b=sc.nextInt();
			int c=a-b;
			System.out.println("subraction of 2 numbers are "+c);
			break;
			
		}
		case 3:
		{
			System.out.println("you have choosen multiplication of two numbers");
			System.out.print("Enter 1st number: ");
			int a=sc.nextInt();
			System.out.print("Enter 2nd number: ");
			int b=sc.nextInt();
			int c=a*b;
			System.out.println("multiplication of 2 numbers are "+c);
			break;
			
		}
		case 4:
		{
			System.out.println("you have choosen division of two numbers");
			System.out.print("Enter 1st number: ");
			int a=sc.nextInt();
			System.out.print("Enter 2nd number: ");
			int b=sc.nextInt();
			float c=a/b;
			System.out.println("division of 2 numbers are "+c);
			break;
			
		}
		
		
		
		}


		

	}

}
